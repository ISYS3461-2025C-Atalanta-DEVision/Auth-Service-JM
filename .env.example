# Auth Service Environment Variables
# Copy this file to .env and fill in your values

# ============================================
# LOCAL DEVELOPMENT
# ============================================

# MongoDB Configuration (local Docker or MongoDB Atlas)
MONGODB_URI=mongodb://authuser:authpass123@localhost:27017/authdb

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# JWT Configuration (min 256 bits for HS256)
JWT_SECRET=your-super-secret-jwt-key-at-least-256-bits-long-for-hs256-algorithm

# Google OAuth2 Configuration (1.3.1, 2.3.1)
# Get these from https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Email Configuration (Brevo SMTP) - Requirements 1.1.3, 6.1.2
# Get credentials from: https://app.brevo.com/settings/keys/smtp
# Free tier: 300 emails/day, no credit card required
SMTP_HOST=smtp-relay.brevo.com
SMTP_PORT=587
SMTP_USERNAME=your-brevo-login-email
SMTP_PASSWORD=your-brevo-smtp-master-password
FROM_EMAIL=your-verified-email@example.com

# Internal API Key (for Gateway communication)
INTERNAL_API_KEY=your-internal-api-key-for-gateway
INTERNAL_API_KEY_VALIDATION=false

# Eureka Service Discovery
EUREKA_URL=http://eureka:eureka-secret-2024@localhost:8761/eureka/
EUREKA_ENABLED=true

# Frontend URL (for OAuth2 redirect)
FRONTEND_URL=http://localhost:3000

# ============================================
# RENDER PRODUCTION (set these in Render Dashboard)
# ============================================

# SPRING_PROFILES_ACTIVE=prod

# MongoDB Atlas Connection String
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/authdb?retryWrites=true&w=majority

# Redis (Render Redis or Upstash)
# REDIS_HOST=your-redis-host.upstash.io
# REDIS_PORT=6379
# REDIS_PASSWORD=your-redis-password

# Eureka (your deployed Eureka server)
# EUREKA_URL=https://eureka:eureka-secret-2024@your-eureka-server.onrender.com/eureka/
# EUREKA_ENABLED=true

# Google OAuth2 (same credentials, but update redirect URI in Google Console)
# GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
# GOOGLE_CLIENT_SECRET=your-google-client-secret

# Frontend URL (your deployed frontend)
# FRONTEND_URL=https://your-frontend.onrender.com

# Brevo SMTP (same credentials work in production)
# SMTP_HOST=smtp-relay.brevo.com
# SMTP_PORT=587
# SMTP_USERNAME=your-brevo-login-email
# SMTP_PASSWORD=your-brevo-smtp-master-password
# FROM_EMAIL=your-verified-email@example.com

# Additional CORS origins (comma-separated)
# APP_ALLOWED_ORIGINS=https://your-frontend.onrender.com,https://your-gateway.onrender.com
